@model MVCProje.Models.PropertyModel
@{
    ViewBag.Title = "Property";
    if (Session["Check"].ToString() != "User")
    {
        Response.Redirect("~/Login/Index");
    }
}
@using ProjeDB

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Property
            </header>
            <div class="panel-body">
                <form class="form-horizontal" id="default">
                    <fieldset title="Step 2" class="step" id="default-step-1" style="display: block;">
                        <legend> </legend>
                        <div class="form-group">

                            <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Type</label>
                            <div class="col-lg-10">
                                <select class="form-control m-bot15" id="_type" onchange="getChoose(this.value)">

                                    <option id="Shift">Shift</option>
                                    <option id="Announcement">Announcement</option>

                                </select>
                            </div>


                            <div id="content">


                            </div>


                        </div>

                    </fieldset>
                </form>
            </div>
        </section>
    </div>
</div>


<div class="row">

    <section class="panel">
        <header class="panel-heading">
            <h1>Shift Type</h1>
        </header>
        <div class="panel-body">
            <div class="adv-table">
                    <table border="0" class="display table table-bordered" id="hidden-table-info1">
                        <thead>
                            <tr>
                                <th>ShiftName</th>
                                <th>Price</th>
                                <th>Reader Name</th>
                                <th>Delete Shift</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ShiftList)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.CardName</td>
                                    <th><a href="javascript:DelShift(@item.Id)">Delete</a></th>
                                </tr>
                            }
                        </tbody>
                    </table>
                
            </div>
        </div>
    </section>
</div>

<div class="row">

    <section class="panel">
        <header class="panel-heading">
            <h1>Announcement Type</h1>
        </header>
        <div class="panel-body">
            <div class="adv-table">
                <table border="0" class="display table table-bordered" id="hidden-table-info2">
                    <thead>
                        <tr>
                            <th>Announcement Name</th>
                            <th>Delete</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AnnList)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td><a href="javascript:DelAnn(@item.Id)">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </section>
</div>









@section script{
    <script>



        function checkCardname() {

            $.ajax
                ({
                    url: "/User/ReadCardName",
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json',
                    processData: false,
                    success: function (data) {
                        $('#card').val(data)
                    }

                });
        }



        function DelShift(id) {
            var data = {
                _id: id
            };

            $.ajax
                ({
                    url: "/User/DelShift",
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    processData: false,
                    success: window.location.assign("/User/Property")


                }
                );
        }

        function DelAnn(_id)
        {
            var data = {
                id: _id
            };

            $.ajax
                ({
                    url: "/User/DelAnn",
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    processData: false,
                    success: window.location.assign("/User/Property")


                }
                );

        }



        function addShift()
        {
            var data = {
                name: $('#name').val(),
                price: $('#price').val(),
                cardname: $('#card').val()
            };

            $.ajax
                ({
                    url: "/User/AddShift",
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    processData: false,
                    success: window.location.assign("/User/Property")


                }
                );

        }
        function addAnn() {
            var data = {
                name: $('#name').val()
            };

            $.ajax
                ({
                    url: "/User/AddAnn",
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    processData: false,
                    success: window.location.assign("/User/Property")


                }
                );

        }

        function getChoose(selectedtype) {
            if (selectedtype == "Shift") {
                $.ajax({
                    url: '@Url.Action("returnAddShift", "User")',
             type: 'POST',
             dataType: 'html',
             data: {},
             success: function (data) {
                  $("#content").html(null);
                 $("#content").html(data);

             },
             error: function (hata, ajaxOptions, thrownError) {
                 alert(hata.status);
                 alert(thrownError);
                 alert(hata.responseText);
             }
            });
            }
            if (selectedtype == "Announcement")
                {
            $.ajax({
                url: '@Url.Action("returnAddAnn", "User")',
             type: 'POST',
             dataType: 'html',
             data: {},
             success: function (data) {
                 $("#content").html(null);
                 $("#content").html(data);

             },
             error: function (hata, ajaxOptions, thrownError) {
                 alert(hata.status);
                 alert(thrownError);
                 alert(hata.responseText);
             }
            });
            }
        }


        getChoose("Shift")

    </script>















