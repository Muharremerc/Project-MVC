                </form>
            </div>
        </section>
    </div>
</div>
<div class="row">

    <section class="panel">
        <header class="panel-heading">
            <h1>Claim</h1>
        </header>
        <div class="panel-body">
            <div class="adv-table">
                <form action="User/AddEmployee" method="post">
                    <table border="0" class="display table table-bordered" id="hidden-table-info1">
                        <thead>
                            <tr>
                                <th>Start</th>
                                <th>Finish</th>
                                <th>Accetp</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ClaimHolidayModel)
                            {
                                <tr>
                                    <td>@item.Start</td>
                                    <td>@item.Finish</td>
                                    <td>@item.Accept</td>
                                </tr>
                            }
                                

                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </section>
</div>

<div class="row">

    <section class="panel">
