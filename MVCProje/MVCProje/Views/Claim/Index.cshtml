            <h1>Claim</h1>
        </header>
        <div class="panel-body">
            <div class="adv-table">
                <form action="User/AddEmployee" method="post">
                    <table border="0" class="display table table-bordered" id="hidden-table-info2">
                        <thead>
                            <tr>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ClaimOtherModel)
                            {
                                <tr>
                                    <td>@item.Details</td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </section>
</div>





@section script{
    <script>
        function addOther() {

            var data = {

                _typename: $('#_type').val(),
                _details: $('#_textArea').val()
            };
            $.ajax
                ({
                    url: '@Url.Action("addClaim", "Claim")',
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    processData: false,
                    success: window.location.assign("/Claim/Index")
                }
                );

        }
        function addHoliday() {

            var data = {
                _typename: $('#_type').val(),
                _finish: $('#_finish').val(),
                _start: $('#_start').val()
            };
            $.ajax
                ({
                    url: '@Url.Action("addHoliday", "Claim")',
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    processData: false,
                    success: window.location.assign("/Claim/Index") /*$("#_textArea").val(null)*/
                }
                );

        }
        function getOther(selectedtype) {
            if (selectedtype == "Other") {
                $.ajax({
                    url: '@Url.Action("returnOther", "Claim")',
             type: 'POST',
             dataType: 'html',
             data: {},
             success: function (data) {
                  $("#content").html(null);
                 $("#content").html(data);

             },
             error: function (hata, ajaxOptions, thrownError) {
                 alert(hata.status);
                 alert(thrownError);
                 alert(hata.responseText);
             }
            });
            }
            if (selectedtype == "İzinİstek")
                {
            $.ajax({
                url: '@Url.Action("returnHoliday", "Claim")',
             type: 'POST',
             dataType: 'html',
             data: {},
             success: function (data) {
                 $("#content").html(null);
                 $("#content").html(data);

             },
             error: function (hata, ajaxOptions, thrownError) {
                 alert(hata.status);
                 alert(thrownError);
                 alert(hata.responseText);
             }
            });
            }
        }
        getOther("Other");

    </script>
    
